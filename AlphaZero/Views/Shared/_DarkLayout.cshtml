<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AlphaZero</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="MobilesContoller" asp-action="Index">AlphaZero</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="MobilesContoller" asp-action="Index"><i class="bi bi-phone"></i> Mobiles</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="bi bi-sort-down-alt"></i> OrderBy
                            </a>

                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" asp-controller="MobilesContoller" asp-action="Index1"><i class="bi bi-check2"></i> ModelName</a>
                                <a class="dropdown-item" asp-controller="MobilesContoller" asp-action="Index2"><i class="bi bi-bootstrap-fill"></i> Brand</a>
                                <a class="dropdown-item" asp-controller="MobilesContoller" asp-action="Index3"><i class="bi bi-currency-dollar"></i> Price</a>
                            </div>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0" asp-controller="MobilesContoller" asp-action="Filter" style="padding-right: 25px;">
                        <input name="searchString" type="text" class="form-control" placeholder="Search for a mobile..." aria-label="Recipient's username" aria-describedby="button-addon2">
                        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="bi bi-search"></i></button>
                    </form>

                </div>
            </div>
        </nav>
    </header>
    <navv>

        <div class="container-fluid list-group-iten border-6">
            <p3 class="text-black-50 fw-bold text-start"> BRAND</p3>
            <div id="BRAND">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="SAMSUNG" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Samsung
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Sony" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Sony
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Nokia" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Nokia
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="HTC" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        HTC
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="BLU" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        BLU
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="BlackBerry" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        BlackBerry
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Google" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Google
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="LG" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        LG
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="ZTE" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        ZTE
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Motorola" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Motorola
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="ONEPLUS" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        ONEPLUS
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Alcatel" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Alcatel
                    </label>
                </div>
            </div>

        </div>

        <div class="container-fluid list-group-iten border-6">
            <p3 class="text-black-50 fw-bold text-start"> Operating System</p3>
            <div id="OperatingSystem">

                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Android" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Android
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="BlackBerry" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        BlackBerry
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="Windows" />
                    <label class=" form-check-label" for="flexCheckDefault">
                        Windows
                    </label>
                </div>
            </div>

        </div>
    </navv>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - AlphaZero
        </div>
    </footer>



    <style>


        navv {
            float: left;
            width: 13%;
            height: 100%;
        }
    </style>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
